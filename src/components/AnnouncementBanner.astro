---
import { getEntry } from "astro:content";
const site = await getEntry("settings", "site");
const data = site?.data;
if (!data?.showBanner) {
  // Render nothing
  return;
}
---
<div class="w-full bg-brand-600/20 border-b border-white/10">
  <div class="container py-2 text-center text-sm">
    {data.bannerText}
  </div>
</div>
