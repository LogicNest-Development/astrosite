---
import data from "../data/footer.json";
const brand  = data.brand ?? {};
const cols   = data.columns ?? [];
const social = data.social ?? [];
const badges = data.badges ?? [];
---

<footer class="mt-20 border-t border-white/10 bg-[#141c4a] text-white/85">
  <div class="container mx-auto grid grid-cols-1 gap-10 px-4 py-12 md:grid-cols-12">
    <div class="md:col-span-5">
      <div class="flex items-center gap-3">
        <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-blue-600/20">
          <span class="h-6 w-6 rounded-full bg-blue-500 blur-[2px]"></span>
        </span>
        <span class="text-xl font-semibold tracking-tight">{brand.name ?? "LogicNest Networks"}</span>
      </div>
      <p class="mt-5 max-w-md text-white/70">
        {brand.tagline ?? "Affordable, reliable game hosting with a control panel you’ll actually enjoy."}
      </p>
      <div class="mt-6 flex items-center gap-3">
        {social.map((s) => (
          <a href={s.href} aria-label={s.label}
             class="inline-flex h-11 w-11 items-center justify-center rounded-xl bg-white/5 text-white/90 hover:bg-white/10"
             target="_blank" rel="noopener noreferrer">
            {s.icon === "discord" ? (
              <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor" aria-hidden="true">
                <path d="M20.317 4.369A19.79 19.79 0 0 0 16.558 3c-.2.352-.432.83-.59 1.203a18.27 18.27 0 0 0-4.936 0A8.79 8.79 0 0 0 10.44 3a19.897 19.897 0 0 0-3.76 1.37C3.723 9.102 3.073 13.72 3.33 18.284a19.907 19.907 0 0 0 5.992 2.312c.485-.67.923-1.385 1.305-2.137a12.86 12.86 0 0 1-2.053-.793c.173-.128.342-.262.505-.4a9.21 9.21 0 0 0 8.835 0c.164.14.333.275.506.403-.656.314-1.342.575-2.055.787.38.752.817 1.468 1.303 2.137a19.88 19.88 0 0 0 5.992-2.312c.3-5.1-.513-9.68-2.343-13.915ZM9.4 15.348c-1.113 0-2.019-1.02-2.019-2.279 0-1.258.892-2.282 2.019-2.282 1.126 0 2.025 1.024 2.02 2.282 0 1.259-.894 2.279-2.02 2.279Zm5.2 0c-1.113 0-2.02-1.02-2.02-2.279 0-1.258.892-2.282 2.02-2.282 1.127 0 2.025 1.024 2.02 2.282 0 1.259-.893 2.279-2.02 2.279Z"/>
              </svg>
            ) : (
              <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor" aria-hidden="true">
                <path d="M4 5a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v14l-3-3H6a2 2 0 0 1-2-2V5Zm3 2h10v2H7V7Zm0 4h7v2H7v-2Z"/>
              </svg>
            )}
          </a>
        ))}
      </div>
      <p class="mt-6 text-xs text-white/50">
        Copyright © {brand.since ?? "2023–2025"} {brand.name ?? "LogicNest Networks"}. All rights reserved.
      </p>
    </div>

    <div class="md:col-span-7 grid grid-cols-2 gap-8 sm:grid-cols-4">
      {cols.map((col) => (
        <div>
          <h4 class="text-lg font-semibold text-white">{col.title}</h4>
          <ul class="mt-3 space-y-2">
            {col.links?.map((lnk) => (
              <li><a href={lnk.href} class="text-white/75 hover:text-white transition-colors">{lnk.label}</a></li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    {badges.length > 0 && (
      <div class="md:col-span-12 flex flex-wrap items-center gap-6 pt-4">
        {badges.map((b) => (<img src={b.img} alt={b.alt} class="h-8 opacity-80" loading="lazy" />))}
      </div>
    )}
  </div>
</footer>
