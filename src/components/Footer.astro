---
import data from "@data/footer.json";
const { brand, columns, copyright } = data;
---

<footer class="bg-[#0f1830] text-white/80 border-t border-white/10">
  <div class="container mx-auto px-4 py-12 grid gap-10 md:grid-cols-2 lg:grid-cols-4">
    <div class="md:col-span-2">
      <div class="flex items-center gap-3">
        <span class="h-10 w-10 rounded-2xl bg-blue-500/20 shadow-inner grid place-items-center">
          <img src="/logo.png" alt={brand.name} class="h-7 w-7" />
        </span>
        <h3 class="text-xl text-white font-semibold">{brand.name}</h3>
      </div>
      <p class="mt-4 max-w-xl">{brand.tagline}</p>
      <div class="mt-5 flex gap-3">
        <a href={brand.discordUrl} target="_blank" rel="noopener" class="p-3 rounded-xl bg-white/5 hover:bg-white/10">🗨️</a>
        <a href={brand.statusUrl} class="p-3 rounded-xl bg-white/5 hover:bg-white/10">📊</a>
      </div>
    </div>

    {columns.map(col => (
      <div>
        <h4 class="text-white font-semibold mb-4">{col.title}</h4>
        <ul class="space-y-2">
          {col.links.map(link => (
            <li>
              <a href={link.href} class="hover:text-white">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>

  <div class="border-t border-white/10 py-5 text-center text-white/60 text-sm">
    {copyright}
  </div>
</footer>
