---
import nav from "@data/nav.json";
const current = Astro.url.pathname;
---

<header class="backdrop-blur supports-[backdrop-filter]:bg-white/5 bg-white/0 border-b border-white/10">
  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.png" alt="LogicNest" class="h-7 w-7 rounded-xl shadow" />
      <span class="text-white/90 font-semibold tracking-tight">LogicNest</span>
    </a>

    <nav class="hidden md:flex items-center gap-6">
      {nav.map(item => (
        <a
          href={item.href}
          class={`text-sm transition ${
            current === item.href ? "text-white" : "text-white/70 hover:text-white"
          }`}
        >
          {item.label}
        </a>
      ))}
    </nav>

    <div class="flex items-center gap-2">
      <a href="/products" class="text-sm px-4 py-2 rounded-xl bg-[#2563ff] text-white shadow hover:opacity-95">
        View Plans
      </a>
    </div>
  </div>
</header>
