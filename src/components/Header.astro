---
import nav from "@data/nav.json";
const groups = nav.mega || [];
const top = nav.top || [];
---
<header class="sticky top-0 z-50 backdrop-blur supports-[backdrop-filter]:bg-black/30">
  <div class="container flex h-16 items-center justify-between">
    <a href="/" class="flex items-center gap-2 font-bold">
      <img src="/logo.png" alt="LogicNest" class="h-7 w-7 rounded" />
      <span>LogicNest</span>
    </a>
    <nav class="hidden md:flex items-center gap-6">
      <div class="relative group">
        <button class="text-white/90 hover:text-white">Games ▾</button>
        <div class="invisible opacity-0 group-hover:visible group-hover:opacity-100 transition p-4 absolute left-0 mt-3 w-[700px] rounded-2xl border border-white/10 bg-panel shadow-ring">
          <div class="grid grid-cols-2 gap-6">
            {groups.map((g) => (
              <div>
                <div class="text-xs uppercase tracking-wide text-white/60 mb-2">{g.title}</div>
                <ul class="space-y-2">
                  {(g.items||[]).filter(i=>i.enabled!==false).map((i) => (
                    <li>
                      <a href={i.href} class="flex items-center justify-between rounded-xl border border-white/10 p-3 hover:bg-white/5">
                        <div class="flex items-center gap-3">
                          <span class="text-xl">{i.icon}</span>
                          <div>
                            <div class="font-medium">{i.label}</div>
                            {i.subtext && <div class="text-xs text-white/60">{i.subtext}</div>}
                          </div>
                        </div>
                        <span class="text-white/40">→</span>
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      </div>
      {top.filter(l=>l.enabled!==false).map((l) => <a href={l.href} class="text-white/80 hover:text-white">{l.label}</a>)}
    </nav>
    <div class="flex items-center gap-3">
      <a href="/admin" class="hidden md:inline text-white/70 hover:text-white">Admin</a>
      <a href="/contact" class="btn-primary">Contact</a>
    </div>
  </div>
</header>
