---
import Layout from "@components/../layouts/Layout.astro";
import groups from "@content/product-groups/*";
---
<Layout title="All Games & Services">
  <section class="container py-12 grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {groups.sort((a,b)=> (a.data.order||0)-(b.data.order||0)).map((g)=> (
      <a href={"/products/" + g.slug} class="card p-6 block hover:bg-white/5">
        <h3 class="text-xl font-semibold">{g.data.title}</h3>
        {g.data.summary && <p class="text-white/70 mt-2">{g.data.summary}</p>}
      </a>
    ))}
  </section>
</Layout>
